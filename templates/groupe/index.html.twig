{% extends 'inside.html.twig' %}

{% block title %}Groupe index{% endblock %}

{% block main %}
    <h1>Groupe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.id }}</td>
                <td>{{ groupe.titre }}</td>
                <td>{{ groupe.description }}</td>
                <td>
                    <a href="{{ path('app_groupe_show', {'id': groupe.id}) }}">show</a>
                    <a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_groupe_new') }}">Create new</a>
{% endblock %}
