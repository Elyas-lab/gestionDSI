{% extends 'inside.html.twig' %}

{% block title %}Projet index{% endblock %}

{% block main %}
    <h1>Projet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date_debut_estimmee</th>
                <th>Date_fin_estimmee</th>
                <th>Date_debut_reel</th>
                <th>Date_fin_reel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.titre }}</td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.dateDebutEstimmee ? projet.dateDebutEstimmee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ projet.dateFinEstimmee ? projet.dateFinEstimmee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ projet.dateDebutReel ? projet.dateDebutReel|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ projet.dateFinReel ? projet.dateFinReel|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">show</a>
                    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_new') }}">Create new</a>
{% endblock %}
