{% extends 'inside.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block main %}
    <h1>Tache index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date_debut_estimmee</th>
                <th>Date_fin_estimmee</th>
                <th>Date_debut_reel</th>
                <th>Date_fin_reel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.titre }}</td>
                <td>{{ tache.description }}</td>
                <td>{{ tache.dateDebutEstimmee ? tache.dateDebutEstimmee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dateFinEstimmee ? tache.dateFinEstimmee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dateDebutReel ? tache.dateDebutReel|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dateFinReel ? tache.dateFinReel|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tache_show', {'id': tache.id}) }}">show</a>
                    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tache_new') }}">Create new</a>
{% endblock %}
