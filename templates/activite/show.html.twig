{% extends 'inside.html.twig' %}

{% block title %}Activite{% endblock %}


{% block main %}
    <h1>Activite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ activite.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
            <tr>
                <th>Date_debut_estimmee</th>
                <td>{{ activite.dateDebutEstimmee ? activite.dateDebutEstimmee|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin_estimmee</th>
                <td>{{ activite.dateFinEstimmee ? activite.dateFinEstimmee|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_debut_reel</th>
                <td>{{ activite.dateDebutReel ? activite.dateDebutReel|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin_reel</th>
                <td>{{ activite.dateFinReel ? activite.dateFinReel|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activite_index') }}">back to list</a>

    <a href="{{ path('app_activite_edit', {'id': activite.id}) }}">edit</a>

    {{ include('activite/_delete_form.html.twig') }}
    <div class="col-md-4">
                {# Inclusion de l'historique #}
                {{ render(controller('App\\Controller\\HistoriqueController::elementHistorique', {
                    'type': 'activite',
                    'id': activite.id,
                    'limit': 5
                })) }}
            </div>
        </div>
    </div>
{% endblock %}
